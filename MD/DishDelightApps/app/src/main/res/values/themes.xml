<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DishDelight" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- style custo image view   -->
    <style name="RoundedImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Sesuaikan dengan kebutuhan -->
    </style>


    <!-- style custom searchbar-->
    <style name="customSearchbar" parent="Widget.Material3.SearchBar.Outlined">
        <item name="shapeAppearanceOverlay">@style/customCornerSearchBar</item>
        <!-- stroke color disini -->
        <item name="strokeColor">@color/black</item>
        <!-- besar nya size stroke -->
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- custom radius disini-->
    <style name="customCornerSearchBar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>